<?xml version="1.0" encoding="UTF-8" ?>

<resources xmlns="https://api-platform.com/schema/metadata"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="https://api-platform.com/schema/metadata
   https://api-platform.com/schema/metadata/metadata-2.0.xsd">
    <resource class="App\Library\Domain\Record">
        <attribute name="normalization_context">
            <attribute name="groups">record:read</attribute>
        </attribute>
        <attribute name="denormalization_context">
            <attribute name="groups">record:write</attribute>
        </attribute>
        <itemOperations>
            <itemOperation name="get">
                <attribute name="method">GET</attribute>
                <attribute name="output">App\Library\Domain\DTO\RecordOutputDTO</attribute>
            </itemOperation>
            <itemOperation name="update">
                <attribute name="method">PUT</attribute>
                <attribute name="input">App\Library\Domain\DTO\RecordInputDTO</attribute>
                <attribute name="output">App\Library\Domain\DTO\RecordOutputDTO</attribute>
            </itemOperation>
            <itemOperation name="delete">
                <attribute name="method">DELETE</attribute>
                <attribute name="controller">App\Library\UI\Controller\DeleteRecordController</attribute>
            </itemOperation>
        </itemOperations>
        <collectionOperations>
<!--            <collectionOperation name="post">
                <attribute name="method">POST</attribute>
                <attribute name="messenger">"input"</attribute>
                <attribute name="input">App\Library\App\CommandHandler\CreateRecordHandler</attribute>
                &lt;!&ndash;<attribute name="input">App\Library\Domain\DTO\RecordInputDTO</attribute>
                <attribute name="output">App\Library\Domain\DTO\RecordOutputDTO</attribute>&ndash;&gt;
            </collectionOperation>-->
            <collectionOperation name="get">
                <attribute name="method">GET</attribute>
                <attribute name="controller">App\Library\UI\Controller\FetchAllRecordsController</attribute>
                <attribute name="pagination_client_items_per_page">true</attribute>
                <attribute name="maximum_items_per_page">5</attribute>
            </collectionOperation>
        </collectionOperations>
    </resource>
</resources>
